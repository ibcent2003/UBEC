    <section class="overview-block-pt iq-pb-60 iq-over-green-80 iq-bg jarallax">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="heading-title text-center">
                        <h2 class="title iq-tw-6 iq-font-white black">Recent Project</h2>
                        <div class=" iq-font-white"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row iq-mt-40">
                <div class="col-sm-12">
                    <div class="owl-carousel arrow-4" data-autoplay="true" data-loop="true" data-nav="true" data-dots="false" data-items="4" data-items-laptop="4" data-items-tab="3" data-items-mobile="2" data-items-mobile-sm="1" data-margin="15">
                        @foreach (var i in Model.inspectionlist)
                        {
                            var getphoto = i.DocumentInfo.ToList();
                            foreach (var p in getphoto)
                            {
                                <div class="item">
                                    <div>
                                        <a href="portfolio-single-1.html">                                          
                                            <img class="img-fluid wd-full itemImage" src="@Url.Action("DocumentsUploadedPath", new { Path = (Model.PicturePath) + p.Path }) " />
                                        </a>
                                        <h6 class="iq-font-white iq-tw-5 iq-mt-15">@p.DocumentType.Name</h6>

                                    </div>
                                </div>
                            }

                        }



                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================================
