    <section class="iq-blog overview-block-ptb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="heading-title text-center">
                        <h2 class="title iq-tw-6">Recent News</h2>

                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var n in Model.NewsList)
    {

                <div class="col-lg-4 col-md-12">
                    <div class="iq-blog-entry white-bg">
                        <div class="iq-entry-image clearfix">
                            <a href="@Url.Action("ViewNews", "Home", new {Id=n.Id, Area = ""})">
                                <img src="@Url.Action("DocumentsUploadedPath", new { Path = (Model.PicturePath) + n.Photo }) " /></a>
                                <span class="tag"><i class="ion-image"></i>Photos</span>
                                @*<span class="date">@n.CreatedDate.AddDays()<small>Aug</small></span>*@

                        </div>
                        <div class="iq-blog-detail">                           
                            <div class="iq-entry-content">
                                <a href="@Url.Action("ViewNews", "Home", new {Id=n.Id, Area = ""})"><p>@n.NewsHeadline</p></a>
                            </div>
                            <ul class="iq-entry-meta iq-mt-10">

                                @*<li><a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @n.NoOfView View(s)</a></li>
                                <li><a href="#"></a></li>*@
                                <li class="pull-right"><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i>Date @n.CreatedDate.ToShortDateString()</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
   }
            </div>
