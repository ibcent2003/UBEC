@model Project.Areas.Admin.Models.SupplyViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Add Deliverable for " + Model.deliverable.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
