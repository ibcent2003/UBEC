@model Project.Areas.Admin.Models.ProjectViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Assign Inspection Officer to " + Model.project.SerialNo + "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
    var db = new Project.DAL.PROEntities();
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Assign Inspection Officer</li>
        </ul>
    </div>
}
<style>
    img {
        width: 100%;
        height: 100%;
    }

    .item {
        /*float: left;*/
        margin: 3px;
        padding: 3px;
        width: 400px;
        height: 300px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            <a href="@Url.Action("Index", "Project", new {Id=Model.project.WorkFlowId, area="Admin"})" class="btn btn-lg btn-warning">Back</a>
            @Html.ActionLink("Submit Project", "Submit", new { Id = Model.project.TransactionId }, new { @class = "btn btn-lg btn-primary" })

            <br /><br />
        </div>
        <div class="widget-content">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Project No</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>State</th>
                        <th>LGA</th>
                        <th>Status</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model.projectList.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.projectList)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>
                                    @item.SerialNo
                                </td>

                                <td>@item.Description</td>
                                <td>@item.Location</td>
                                <td>@item.LGA.State.Name</td>
                                <td>@item.LGA.Name</td>
                                <td>
                                    @{
                                        var getwork = db.Workflow.Where(x => x.Id == item.WorkFlowId).FirstOrDefault();

                                        var getdoctype = getwork.DocumentType.ToList();
                                        var getdocument = item.DocumentInfo.ToList();
                                        if (getdoctype.Count != getdocument.Count)
                                        {
                                            if (item.Status == "draft")
                                            {
                                                <span class="label label-danger">draft</span>
                                            }
                                            else
                                            {
                                                <span class="label label-success">@item.Status</span>
                                            }
                                        }
                                        else
                                        {
                                            var getpayment = item.Payment.ToList();
                                            if (getpayment.Count != 0)
                                            {
                                                <span class="label label-success">Awaiting Submission</span>
                                            }
                                            else
                                            {
                                                <span class="label label-primary">Awaiting Payment</span>
                                            }

                                        }
                                    }
                                </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<br />
<br />
@if (Model.HasAssigned == false)
{
    using (Html.BeginForm("AssignOfficer", "Project", new { Id = Model.project.TransactionId }, FormMethod.Post, new { @enctype = "multipart/form-data", area = "Admin" }))
    {
        @Html.HiddenFor(x => x.project.TransactionId)
        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i>Select inspection officer</h4>
                    </div>
                    <div class="widget-content">

                        <form class="form-vertical" action="#">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-7">
                                        @Html.DropDownListFor(m => m.username, Model.InspectionUser, "Select", new { @class = "form-control", @placeholder = "" })
                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" value="Add" class="btn btn-success btn-xs" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{

}

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Assinged Offier
                </h4>
            </div>
            <div class="widget-content">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr style="font-size: 12px;">
                            <th>S/N</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Mobile No</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.projectList.Count != 0)
                        {

                            int i = 0;
                            foreach (var item in Model.projectList)
                            {
                                var getuser = db.UserDetail.Where(x => x.UserId == item.InspectionUserId).FirstOrDefault();
                                if (getuser != null)
                                {
                                    ++i;
                                    <tr style="font-size: 12px;">
                                        <td>
                                            @i
                                        </td>
                                        <td>@getuser.FirstName</td>
                                        <td>@getuser.LastName</td>
                                        <td>@getuser.EmailAddres</td>
                                        <td>@getuser.MobileNumber</td>
                                        <td>
                                            @Html.ActionLink("Remve", "RemoveUser", new { Id = item.TransactionId }, new { @class = "btn btn-warning btn-xs", onclick = "return DeleteConfirm()" })
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">No Records Found!...</td>
                                    </tr>
                                }

                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Records Found!...</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
        "use strict";

        function DeleteConfirm() {
            if (confirm("Are you sure want to remove this user?"))
                return true;
            else
                return false;
        }
    </script>
}
