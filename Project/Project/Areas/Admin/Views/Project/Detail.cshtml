@model Project.Areas.Admin.Models.ProjectViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = Model.project.SerialNo + "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
    var db = new Project.DAL.PROEntities();
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Detail</li>
        </ul>
    </div>
}
<style>
    img {
        width: 100%;
        height: 100%;
    }

    .item {
        /*float: left;*/
        margin: 3px;
        padding: 3px;
        width: 400px;
        height: 300px;
    }
</style>
<a href="@Url.Action("InspectionList", "Project", new {Id=Model.project.Id, area="Admin"})" class="btn btn-lg btn-warning">Back</a>
@Html.ActionLink("Submit Project", "Submit", new { Id = Model.project.TransactionId }, new { @class = "btn btn-lg btn-primary" })
<br /><br />
<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Project Information
                </h4>


            </div>
            <div class="widget-content">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr style="font-size: 12px;">
                            <th>S/N</th>
                            <th>Project No</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>State</th>
                            <th>LGA</th>
                            <th>Status</th>
                            <th>Action</th>


                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.projectList.Count != 0)
                        {
                            int i = 0;
                            foreach (var pro in Model.projectList)
                            {
                                ++i;
                                <tr style="font-size: 12px;">
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @pro.SerialNo
                                    </td>

                                    <td>@pro.Description</td>
                                    <td>@pro.Location</td>
                                    <td>@pro.LGA.State.Name</td>
                                    <td>@pro.LGA.Name</td>
                                    <td>
                                        @{
                                            var getwork = db.Workflow.Where(x => x.Id == pro.WorkFlowId).FirstOrDefault();

                                            var getdoctype = getwork.DocumentType.ToList();
                                            var getdocument = pro.DocumentInfo.ToList();
                                            if (getdoctype.Count != getdocument.Count)
                                            {
                                                if (pro.Status == "draft")
                                                {
                                                    <span class="label label-danger">draft</span>
                                                }
                                                else
                                                {

                                                    <span class="label label-success">@pro.Status</span>
                                                }
                                            }
                                            else
                                            {
                                                var getpayment = pro.Payment.ToList();
                                                if (getpayment.Count != 0)
                                                {
                                                    <span class="label label-success">Awaiting Submission</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-primary">Awaiting Payment</span>
                                                }

                                            }
                                        }
                                    </td>
                                    <td>
                                        <a data-toggle="modal" title="Project Information" href="#@pro.TransactionId"><i class="icon-eye-open"></i></a>
                                        <div class="row">
                                            <div class="modal fade" id="@pro.TransactionId">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title">Project Information</h4>

                                                        </div>
                                                        <div class="modal-body">

                                                            <table class="my-acct">
                                                                <tr>
                                                                    <td><b>Serial No:</b> </td>
                                                                    <td>@pro.SerialNo</td>
                                                                </tr>
                                                                <tr>
                                                                    <td><b>Location</b></td>
                                                                    <td>
                                                                        @pro.Location
                                                                    </td>
                                                                </tr>

                                                                <tr>
                                                                    <td><b>Description</b></td>
                                                                    <td>@pro.Description</td>
                                                                </tr>

                                                               

                                                                <tr>
                                                                    <td><b>Contractor</b></td>
                                                                    <td>@pro.Contractor.Name</td>
                                                                </tr>

                                                                <tr>
                                                                    <td><b>Contract Sum</b></td>
                                                                    <td>@pro.ContractSum</td>
                                                                </tr>                 

                                                            </table>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>


                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Records Found!...</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Payment
                </h4>


            </div>
            <div class="widget-content">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr style="font-size: 12px;">
                            <th>S/N</th>
                            <th>Payment Type</th>
                            <th>Amount</th>
                            <th>ModifiedBy</th>
                            <th>ModifiedDate</th>                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.paymentlist.Count != 0)
                        {
                            int i = 0;
                            foreach (var item in Model.paymentlist)
                            {
                                ++i;
                                <tr style="font-size: 12px;">
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.PaymentType.Name
                                    </td>

                                    <td>@item.ContractSum</td>
                                    <td>@item.ModifiedBy</td>
                                    <td>@item.ModifiedDate</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Records Found!...</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Inspection Information
                </h4>


            </div>
            <div class="widget-content">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr style="font-size: 12px;">
                            <th>S/N</th>
                            <th>Location</th>
                            <th>Coordinate</th>
                            <th>State</th>
                            <th>Lga</th>
                            <th>State of Completion</th>
                            <th>Has Defect</th>
                            <th>Status</th>
                            <th>Action</th>


                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.InspectionList.Count != 0)
                        {
                            int i = 0;
                            foreach (var item in Model.InspectionList)
                            {
                                ++i;
                                <tr style="font-size: 12px;">
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.Location
                                    </td>

                                    <td>@item.Coordinate</td>
                                    <td>@item.LGA.State.Name</td>
                                    <td>@item.LGA.Name</td>
                                    <td>@item.StageOfCompletion</td>
                                    <td>
                                        @if (item.HasDefect == true)
                                        {
                                            <span class="label label-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">No</span>
                                        }
                                    </td>
                                    <td>

                                        @{
                                            var getwork = db.Workflow.Where(x => x.Id == Model.project.WorkFlowId).FirstOrDefault();

                                            var getdoctype = getwork.DocumentType.ToList();
                                            var getdocument = item.DocumentInfo.ToList();
                                            if (getdoctype.Count != getdocument.Count)
                                            {
                                                if (item.InspectionStatus == "Not Submitted")
                                                {
                                                    <span class="label label-danger">draft</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-success">@item.InspectionStatus</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="label label-success">Awaiting Submission</span>

                                            }
                                        }


                                    </td>
                                    <td>
                                        <a data-toggle="modal" title="Inspection Information" href="#@item.Id"><i class="icon-eye-open"></i></a>
                                        <div class="row">
                                            <div class="modal fade" id="@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title">Inspection Information</h4>

                                                        </div>
                                                        <div class="modal-body">

                                                            <table class="my-acct">
                                                                
                                                                <tr>
                                                                    <td><b>Location</b></td>
                                                                    <td>
                                                                        @item.Location
                                                                    </td>
                                                                </tr>                                                              
                                                                <tr>
                                                                    <td><b>Coordinate</b></td>
                                                                    <td>@item.Coordinate</td>
                                                                </tr>

                                                               

                                                                <tr>
                                                                    <td><b>Stage Of Completion</b></td>
                                                                    <td>@item.StageOfCompletion</td>
                                                                </tr>

                                                                <tr>
                                                                    <td><b>Description of Completion</b></td>
                                                                    <td>@item.DescriptionOfCompletion</td>
                                                                </tr>

                                                                <tr>
                                                                    <td><b>Project Quanlity</b></td>
                                                                    <td>@item.ProjectQuality</td>
                                                                </tr>

                                                                <tr>
                                                                    <td><b>Has Defect</b></td>
                                                                    <td>
                                                                        @if (item.HasDefect == true)
                                                                        {
                                                                            <span class="label label-danger">Yes</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="label label-success">No</span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                                @if (item.HasDefect == true)
                                                                {
                                                                    <tr>
                                                                        <td><b>Description of Defect</b></td>
                                                                        <td>@item.DescriptionOfDefect</td>
                                                                    </tr>
                                                                }




                                                            </table>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>


                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Records Found!...</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.DocumentInfoList)
    {
        <div class="col-md-6">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> @item.DocumentType.Name</h4>  
                </div>
                <div class="widget-content align-center">
                    <p>
                        <img class="item" src="@Url.Action("DocumentsUploadedPath", new { Path=(Model.FullPhotoPath) + item.Path})" />
                    </p>
                </div>
            </div>
        </div>
    }



</div>



@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
        "use strict";

        function DeleteConfirm() {
            if (confirm("Are you sure want to remove this photo?"))
                return true;
            else
                return false;
        }
    </script>
}
