@model Project.Areas.Admin.Models.ProjectViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Upload Photo to " + Model.project.SerialNo;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Upload Photo</li>
        </ul>
    </div>
}
<style>
    img {
        width: 100%;
        height: 100%;
    }

    .item {
        /*float: left;*/
        margin: 3px;
        padding: 3px;
        width: 400px;
        height: 300px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            <a href="@Url.Action("Index", "Project", new {Id=Model.project.WorkFlowId, area="Admin"})" class="btn btn-lg btn-warning">Back</a>
            @if (Model.AllPhotoUploaded == true)
            {
                @Html.ActionLink("Sumit Project", "RemovePayment", new { Id = Model.project.TransactionId}, new { @class = "btn btn-lg btn-primary"})
            }
            <br /><br />
        </div>
        <div class="widget-content">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Project No</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>State</th>
                        <th>LGA</th>
                        <th>Status</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model.projectList.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.projectList)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>
                                    @item.SerialNo
                                </td>

                                <td>@item.Description</td>
                                <td>@item.Location</td>
                                <td>@item.LGA.State.Name</td>
                                <td>@item.LGA.Name</td>
                                <td>
                                    @if (item.Status == "draft")
                                    {
                                        <span class="label label-danger">draft</span>
                                    }
                                    else
                                    {
                                        <span class="label label-success">@item.Status</span>
                                    }
                                </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<br />
@if (Model.AllPhotoUploaded == true)
{

}
else
{
    using (Html.BeginForm("UploadPhoto", "Project", new { Id = Model.project.TransactionId }, FormMethod.Post, new { @enctype = "multipart/form-data", area = "Admin" }))
    {
        @Html.HiddenFor(x => x.project.TransactionId)
        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i>Upload Photo</h4>
                    </div>
                    <div class="widget-content">

                        <form class="form-vertical" action="#">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(m => Model.documentForm.DocumentTypeId, new SelectList(Model.AvailableDocument, "Id", "Name"), "Please ONE", new { @class = "form-control" })
                                    </div>

                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.documentForm.Photo, new { type = "file" })
                                        @Html.ValidationMessageFor(model => model.documentForm.Photo, null, new { @style = "color:red" })

                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" value="Upload" class="btn btn-success btn-xs" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}


<div class="row">
    @foreach (var item in Model.DocumentInfoList)
    {
        <div class="col-md-6">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> @item.DocumentType.Name</h4>  @Html.ActionLink("Delete", "RemovePhoto", new { Id = Model.project.TransactionId, DocumentId = item.Id }, new { @class = "btn btn-warning btn-xs pull-right", onclick = "return DeleteConfirm()" })
                </div>
                <div class="widget-content align-center">
                    <p>
                        <img class="item" src="@Url.Action("DocumentsUploadedPath", new { Path=(Model.FullPhotoPath) + item.Path})" />
                    </p>
                </div>
            </div>
        </div>
    }



</div>



@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
        "use strict";

        function DeleteConfirm() {
            if (confirm("Are you sure want to remove this photo?"))
                return true;
            else
                return false;
        }
    </script>
}
