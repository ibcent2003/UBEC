@model Project.Models.IndexViewModel
@{
    ViewBag.Title = Model.workflow.Name + "Project(s)";
    Layout = "~/Views/Shared/_PlainLayout.cshtml";
    var db = new Project.DAL.PROEntities();
}

<section class="overview-block-ptb iq-over-black-70 jarallax iq-breadcrumb3 text-left iq-font-white" style="background-image: url('/Content/Frontend/revolution/assets/s1.jpg'); background-position: center center; background-repeat: no-repeat; background-size: cover;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-sm-12">
                <div class="iq-mb-0">
                    <h2 class="iq-font-white iq-tw-6">@Model.workflow.Name</h2>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <nav aria-label="breadcrumb" class="text-right">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/"><i class="ion-android-home"></i> Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.workflow.Name</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>


<div class="overview-block-ptb">
    <div class="container">

        <div class="row">

            <div class="col-lg-12 col-sm-12 iq-font-black iq-mtb-30">
                <h3 class="small-title iq-tw-6 iq-mb-30 ">@Model.workflow.Name Project</h3>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                S/N
                            </th>

                            <th>
                                Location
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                LGA
                            </th>
                            <th>
                                Contractor
                            </th>
                            <th>
                                Coordinate
                            </th>
                            <th>
                                Ver. Officer
                            </th>
                            <th>
                                Ver. Date
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SupplyList.Count != 0)
                        {
                            int i = 0;
                            foreach (var item in Model.SupplyList.Where(x => x.Status == "Approved"))
                            {

                                // var getInspection = item.Inspection.OrderByDescending(x=>x.StageOfCompletion).FirstOrDefault();

                                ++i;

                        <tr>
                            <td>
                                @i
                            </td>

                            <td>
                                @item.Location
                            </td>
                            <td>
                                @item.LGA.State.Name
                            </td>
                            <td>
                                @item.LGA.Name
                            </td>
                            <td>
                                @item.Contractor.Name
                            </td>
                            <td>
                                @item.Coordinate
                            </td>
                            <td>
                                @item.VerificationOfficer
                            </td>
                            <td>
                                @item.VerificationDate
                            </td>
                            <td>
                                <a href="@Url.Action("ViewSupply", "Home", new { Id = item.TransactionId, area = "" })" class="btn btn-xs btn-success">View Report</a>
                            </td>
                        </tr>

                            }
                        }

                    </tbody>
                </table>

            </div>


        </div>


    </div>
</div>